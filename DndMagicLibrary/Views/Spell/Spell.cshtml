@model DndMagicLibrary.ViewModels.SpellViewModel
@{
    ViewBag.Title = "D&D Magic Library";
}

<h1 class="text-center my-4 btn-outline-info">Spells for @Model.ClassName</h1>
<div class="row">
    @for(int i = 0; i < @Model.Spells.Count; i++)
    {
        <div class="col-md-3">
            <div class="card">
                <h5 class="card-title text-center text-uppercase bg-info py-3">Spells at level @i</h5>
                <div class="card-body">
                    @foreach(var spell in @Model.Spells[i])
                    {
                        <p>@spell.Name</p>
                    }

